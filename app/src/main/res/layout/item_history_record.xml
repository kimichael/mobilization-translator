<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.kimichael.yandextranslate.buttons.BookmarkButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/bookmark_button"
            android:src="@drawable/bookmark_button"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/button_big_margin"/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/src_word"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dest_word"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/language_direction"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/button_big_margin"/>

    </LinearLayout>


</FrameLayout>